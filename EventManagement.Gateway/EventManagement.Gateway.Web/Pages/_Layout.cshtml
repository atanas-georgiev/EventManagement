@using System.IO
@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.Extensions.Configuration
@inject IConfigurationRoot Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="@(Configuration["ServiceLocations:Portal"] + "dist/portal.min.css")" />
</head>
<body>

    <div class="container body-content">

        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        @RenderBody()
        <hr />

    </div>
    <script src="@(Configuration["ServiceLocations:portal"] + "dist/portal.min.js")" asp-append-version="true"></script>
</body>
</html>
